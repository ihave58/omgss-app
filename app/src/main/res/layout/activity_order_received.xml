<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_dialog_bg"
    android:gravity="center"
    tools:context="in.omgss.ui.orders.OrderReceivedActivity">


    <TextView
        android:text="Yay!"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        app:fontFamily="@font/helvetica_bold"
        android:textSize="@dimen/dimen_26sp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_success"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Your order has been recieved"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBlack"
        app:fontFamily="@font/helvetica_bold"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Sit back and relax\n
while we work on it"
        android:layout_width="wrap_content"
        android:textColor="@color/colorLightGrey"
        android:gravity="center"
        app:fontFamily="@font/helvetica"
        android:textSize="@dimen/dimen_16sp"
        android:layout_height="wrap_content" />


</LinearLayout>